<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/colorDark">

    <TextView
            android:textColor="@color/colorTheme"
            android:shadowColor="@color/colorPrimary"
            android:shadowDx="5"
            android:shadowDy="2"
            android:shadowRadius="5"

            android:text="Кто шпион?"
            android:textSize="60sp"
            android:id="@+id/WhoIsTheSpy"
            android:textStyle="bold"
            android:textFontWeight="@android:integer/config_mediumAnimTime"
            android:layout_width="335dp"
            android:layout_height="88dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.656"/>
    <RelativeLayout android:layout_width="338dp" android:layout_height="70dp"
                    android:id="@+id/RelativeLayout_1"
                    app:layout_constraintTop_toBottomOf="@+id/WhoIsTheSpy" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="35dp"
                    app:layout_constraintHorizontal_bias="0.534">
        <TextView
                android:textSize="45sp"
                android:textColor="@color/colorTheme"
                android:layout_width="201dp"
                android:layout_height="70dp"
                android:shadowColor="@color/colorPrimary"
                android:shadowDx="5"
                android:shadowDy="2"
                android:shadowRadius="5"

                android:text="Игроки"
                android:textStyle="normal"
                android:id="@+id/Player"
                android:layout_marginBottom="0dp"/>
        <EditText
                android:layout_width="103dp"
                android:layout_height="70dp"
                android:inputType="number"
                android:ems="10"
                android:textColor="@color/colorTheme"
                android:textColorHint="@color/colorTheme"
                android:background="@color/colorDark"
                android:gravity="center"
                android:textSize="45sp"
                android:textStyle="normal"
                android:shadowColor="@color/colorPrimary"
                android:shadowDx="5"
                android:shadowDy="2"
                android:shadowRadius="5"

                android:text="5"
                android:hint="5"
                android:id="@+id/act_mainEditTextPlayer"
                android:layout_toEndOf="@+id/Player" android:layout_toRightOf="@+id/Player"
                android:layout_marginLeft="32dp" android:layout_marginStart="32dp"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="338dp" android:layout_height="70dp"
                    android:id="@+id/RelativeLayout_2"
                    app:layout_constraintTop_toBottomOf="@+id/RelativeLayout_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.534"
                    android:layout_marginTop="23dp">
        <TextView
                android:textSize="45sp"
                android:textColor="@color/colorTheme"
                android:layout_width="201dp"
                android:layout_height="70dp"
                android:shadowColor="@color/colorPrimary"
                android:shadowDx="5"
                android:shadowDy="2"
                android:shadowRadius="5"

                android:text="Шпионы"
                android:textStyle="normal"
                android:id="@+id/Spy"/>
        <EditText
                android:layout_width="103dp"
                android:layout_height="70dp"
                android:inputType="number"
                android:ems="10"
                android:textColor="@color/colorTheme"
                android:textColorHint="@color/colorTheme"
                android:background="@color/colorDark"
                android:gravity="center"
                android:textSize="45sp"
                android:textStyle="normal"
                android:shadowColor="@color/colorPrimary"
                android:shadowDx="5"
                android:shadowDy="2"
                android:shadowRadius="5"

                android:text="2"
                android:hint="2"
                android:id="@+id/act_mainEditTextSpy"
                android:layout_toEndOf="@+id/Spy" android:layout_toRightOf="@+id/Spy" android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="338dp" android:layout_height="70dp"
                    android:id="@+id/RelativeLayout_3"
                    app:layout_constraintTop_toBottomOf="@+id/RelativeLayout_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.534"
                    android:layout_marginTop="23dp">
        <TextView
                android:textSize="45sp"
                android:textColor="@color/colorTheme"
                android:layout_width="201dp"
                android:layout_height="70dp"
                android:shadowColor="@color/colorPrimary"
                android:shadowDx="5"
                android:shadowDy="2"
                android:shadowRadius="5"

                android:text="Таймер"
                android:textStyle="normal"
                android:id="@+id/Timer"/>
        <EditText
                android:layout_width="103dp"
                android:layout_height="70dp"
                android:inputType="number"
                android:ems="10"
                android:textColor="@color/colorTheme"
                android:textColorHint="@color/colorTheme"
                android:background="@color/colorDark"
                android:gravity="center"
                android:textSize="45sp"
                android:textStyle="normal"
                android:shadowColor="@color/colorPrimary"
                android:shadowDx="5"
                android:shadowDy="2"
                android:shadowRadius="5"

                android:text="5"
                android:hint="5"
                android:id="@+id/act_mainEditTextTimer"
                android:layout_toEndOf="@+id/Timer" android:layout_toRightOf="@+id/Timer"
                android:layout_marginLeft="32dp" android:layout_marginStart="32dp"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="338dp" android:layout_height="70dp"
                    android:id="@+id/RelativeLayout_4"
                    app:layout_constraintTop_toBottomOf="@+id/RelativeLayout_3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.534"
                    android:layout_marginTop="23dp">
        <TextView
                android:textSize="45sp"
                android:textColor="@color/colorTheme"
                android:layout_width="201dp"
                android:layout_height="70dp"
                android:shadowColor="@color/colorPrimary"
                android:shadowDx="5"
                android:shadowDy="2"
                android:shadowRadius="5"


                android:text="Наборы"
                android:textStyle="normal"
                android:id="@+id/Sets"
                android:onClick="onClickStartSets"
                android:clickable="true"
                tools:ignore="OnClick"/>
        <CheckBox
                android:buttonTint="@color/colorTheme"
                android:scaleX="1.9"
                android:scaleY="1.9"
                android:background="@color/colorDark"
                android:tint="@color/colorTheme"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"

                android:id="@+id/act_mainCheckBoxSets"
                android:layout_toEndOf="@+id/Sets" android:layout_toRightOf="@+id/Sets"
                android:layout_marginLeft="100dp" android:layout_marginStart="100dp"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="338dp" android:layout_height="70dp"
                    android:id="@+id/RelativeLayout_5"
                    app:layout_constraintTop_toBottomOf="@+id/RelativeLayout_4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.534"
                    android:layout_marginTop="23dp"
                    app:layout_constraintVertical_bias="0.073">
        <TextView
                android:textSize="45sp"
                android:textColor="@color/colorTheme"
                android:layout_width="201dp"
                android:layout_height="70dp"
                android:shadowColor="@color/colorPrimary"
                android:shadowDx="5"
                android:shadowDy="2"
                android:shadowRadius="5"

                android:text="Слово"
                android:textStyle="normal"
                android:id="@+id/Word"
                android:clickable="true"
                android:onClick="onClickStartWord"/>
        <CheckBox
                android:buttonTint="@color/colorTheme"
                android:scaleX="1.9"
                android:scaleY="1.9"
                android:background="@color/colorDark"
                android:tint="@color/colorTheme"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:id="@+id/act_mainCheckBoxWord"
                android:layout_toEndOf="@+id/Word" android:layout_toRightOf="@+id/Word"
                android:layout_marginLeft="100dp" android:layout_marginStart="100dp"/>
    </RelativeLayout>
    <TextView
            android:textSize="45sp"
            android:textColor="@color/colorTheme"
            android:layout_width="201dp"
            android:layout_height="70dp"
            android:shadowColor="@color/colorPrimary"
            android:shadowDx="5"
            android:shadowDy="2"
            android:shadowRadius="5"

            android:text="Правила"
            android:textStyle="normal"
            android:clickable="true"
            android:id="@+id/Rules"
            android:onClick="onClickRules"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.185"
            app:layout_constraintTop_toBottomOf="@+id/RelativeLayout_5"
            app:layout_constraintBottom_toTopOf="@+id/Play"/>
    <Button
            android:textSize="45sp"
            android:background="@color/colorTheme"
            android:textColor="@color/colorDark"
            android:layout_width="match_parent"
            android:layout_height="90dp"

            android:text="Играть"
            android:id="@+id/Play"
            android:onClick="play"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>