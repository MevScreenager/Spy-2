<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark" android:id="@+id/backInActivity_Main">
    <TextView
            android:textColor="@color/colorTheme"
            android:shadowColor="@color/colorPrimary"
            android:shadowDx="5"
            android:shadowDy="2"
            android:shadowRadius="5"

            android:text="Кто шпион?"
            android:textSize="60sp"
            android:id="@+id/WhoIsTheSpy"
            android:textStyle="bold"
            android:textFontWeight="@android:integer/config_mediumAnimTime"
            android:layout_width="335dp"
            android:layout_height="88dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.656"/>
    <RelativeLayout android:layout_width="222dp" android:layout_height="37dp"
                    android:id="@+id/RelativeLayoutForBack"
                    app:layout_constraintTop_toBottomOf="@+id/WhoIsTheSpy" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                    app:layout_constraintHorizontal_bias="0.084">
        <ImageButton
                android:background="@color/colorDark"
                android:onClick="onClickStartBack"
                android:clickable="true"
                android:tint="@color/colorTheme"
                android:layout_width="55dp"
                android:layout_height="38dp" app:srcCompat="@drawable/abc_vector_test" android:id="@+id/act_setsBack"
                android:focusable="true"/>
        <TextView
                android:textColor="@color/colorTheme"
                android:textSize="25dp"
                android:textStyle="bold"
                android:onClick="onClickStartBack"
                android:text="Назад"
                android:layout_width="108dp"
                android:layout_height="37dp" android:id="@+id/back"
                android:layout_toEndOf="@+id/act_setsBack" android:layout_toRightOf="@+id/act_setsBack"/>
    </RelativeLayout>
    <TextView
            android:textColor="@color/colorTheme"

            android:text="Наборы"
            android:layout_width="246dp"
            android:layout_height="74dp"
            android:textSize="55sp"
            android:id="@+id/Sets"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/WhoIsTheSpy"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.14"
            app:layout_constraintHorizontal_bias="0.503"/>
    <TextView
            android:textColor="@color/colorYellow"
            android:clickable="true"
            android:checked="true"
            android:onClick="selected"

            android:id="@+id/City"
            android:text="Города"
            android:textSize="45sp"
            android:layout_width="247dp"
            android:layout_height="64dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Sets" android:layout_marginTop="44dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.033"/>
    <TextView
            android:textColor="@color/colorYellow"
            android:clickable="true"
            android:checked="true"
            android:onClick="selected"

            android:text="Места"
            android:textSize="45sp"
            android:layout_width="247dp"
            android:layout_height="64dp"
            android:id="@+id/Places"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/City" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" />
    <TextView
            android:textColor="@color/colorYellow"
            android:clickable="true"
            android:checked="true"
            android:onClick="selected"

            android:text="Животные"
            android:textSize="45sp"
            android:layout_width="247dp"
            android:layout_height="64dp"
            android:id="@+id/Animals"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Places" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:textColor="@color/colorYellow"
            android:clickable="true"
            android:checked="true"
            android:onClick="selected"

            android:text="Еда"
            android:textSize="45sp"
            android:layout_width="247dp"
            android:layout_height="64dp"
            android:id="@+id/Eat"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Animals" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:textColor="@color/colorYellow"
            android:clickable="true"
            android:checked="true"
            android:onClick="selected"

            android:text="Одежда"
            android:textSize="45sp"
            android:layout_width="247dp"
            android:layout_height="64dp"
            android:id="@+id/Clothes"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Eat" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:textColor="@color/colorPrimaryDark"
            android:clickable="true"
            android:checked="true"
            android:onClick="selected"

            android:text="Мои слова"
            android:textSize="45sp"
            android:layout_width="247dp"
            android:layout_height="64dp"
            android:id="@+id/MyWords"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Eat" app:layout_constraintVertical_bias="0.566"
            app:layout_constraintHorizontal_bias="0.506"/>
    <TextView
            android:textColor="@color/colorTheme"
            android:textSize="25dp"
            android:text="Тёмно-жёлтый цвет значит набор выбран. Нажмите, чтобы выбрать."
            android:layout_width="match_parent"
            android:layout_height="89dp" android:id="@+id/setsRule"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Clothes" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="1.0"
            android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>